@model System.Collections.Generic.List<BookInventory.ViewModels.BookListViewModel>
@{
    var action = "/Modules/BookInventory" + Url.Action("Add", "BookInventory");
}

<h1>Books</h1>

<div><button type="button" class="btn btn-default" onclick="window.location = '@action'">+ Add</button></div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>BookId</th>
                <th>Book Name</th>
                <th>ISBN</th>
                <th>Date Issued</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.BookId</td>
                        <td>@item.BookName</td>
                        <td>@item.ISBN</td>
                        <td>@item.DateIssued.ToString("yyyy-MM-dd")</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4">No Records.</td>
                </tr>
            }
        </tbody>

    </table>
</div>
